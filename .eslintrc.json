{
    "extends": ["eslint:recommended", "plugin:vue/recommended"],
    "plugins": ["vue"],
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "rules": {
        "getter-return": 2,
        "no-template-curly-in-string": 2,
        "no-console": 1,

        "block-scoped-var": 2,
        "no-alert": 1,
        "no-else-return": 2,
        "no-eval": 1,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-extra-label": 2,
        "no-param-reassign": 2,
        "no-proto": 2,
        "no-unused-expressions": 2,
        "no-with": 2,
        "prefer-promise-reject-errors": 2,

        "vue/html-indent": 0
    }
}
